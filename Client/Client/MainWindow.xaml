<Window
    x:Class="Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="通信客户端测试"
    Width="1100"
    Height="460"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Label
                Margin="0,5"
                VerticalContentAlignment="Center"
                Content="服务器IP地址："
                FontSize="18" />
            <TextBox
                x:Name="IpTextBox"
                Width="200"
                Height="35"
                Margin="0,5"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16"
                Text="192.168.11.168"
                TextWrapping="Wrap" />
            <TextBlock
                Margin="5"
                VerticalAlignment="Bottom"
                FontSize="12"
                Text="填写连接服务器的Ip,默认192.168.11.168，如果服务器和客户端安装在同一台机器上，则可填127.0.0.1测试"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <Label
                Margin="0,5"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Content="ID："
                FontSize="18" />
            <TextBox
                x:Name="IDTextBox"
                Width="100"
                Height="35"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16"
                Text="2"
                TextWrapping="Wrap" />

            <Button
                Margin="5,5,0,0"
                Padding="10,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="ConnectService_Click"
                Content="连接服务"
                Cursor="Hand" />

            <Label
                x:Name="ClientStateLabel"
                Margin="5"
                VerticalContentAlignment="Bottom"
                FontSize="12" />
        </StackPanel>


        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,5"
            VerticalContentAlignment="Center"
            Content="发送内容："
            FontSize="18" />
        <TextBox
            x:Name="SendMessage"
            Grid.Row="2"
            Grid.Column="1"
            MinHeight="36"
            Margin="0,5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="18"
            TextWrapping="Wrap" />
        <Button
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,5"
            Padding="10,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="Send_Click"
            Content="发送" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5"
            VerticalContentAlignment="Center"
            Content="接收内容："
            FontSize="18"
            Visibility="Collapsed" />
        <TextBox
            x:Name="DisplayMessage"
            Grid.Row="4"
            Grid.Column="1"
            MinHeight="36"
            Margin="0,5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            FontSize="18"
            TextWrapping="Wrap"
            Visibility="Collapsed" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,5,0,0"
            VerticalContentAlignment="Center"
            Content="发送的数据流"
            FontSize="16" />
        <TextBox
            x:Name="DisplayBytes"
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            MinHeight="100"
            Margin="0,0,0,5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Top"
            FontSize="18"
            TextWrapping="Wrap" />
    </Grid>
</Window>